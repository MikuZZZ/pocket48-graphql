{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended",
		"tslint-react"
	],
	"linterOptions": {
		"exclude": [
			"node_modules"
		]
	},
	"jsRules": {},
	"rules": {
		"indent": [
			true,
			"spaces",
			4
		],
		"linebreak-style": [
			true,
			"LF"
		],
		"quotemark": [
			true,
			"single",
			"avoid-escape",
			"avoid-template"
		],
		"file-header": false,
		"ordered-imports": [
			false,
			{
				"import-sources-order": "any",
				"named-imports-order": "any",
				"grouped-imports": true
			}
		],
		"newline-before-return": false,
		"member-ordering": [
			false,
			{
				"order": [
					"static-field",
					"instance-field",
					"constructor",
					"private-instance-method",
					"static-method",
					"public-instance-method"
				]
			}
		],
		"no-empty-interface": false,
		"no-trailing-whitespace": [
			true,
			"ignore-blank-lines"
		],
		"no-console": [
			false
		],
		"object-literal-sort-keys": [
			false
		],
		"max-classes-per-file": false,
		"variable-name": [
			true,
			"allow-leading-underscore",
			"ban-keywords",
			"check-format",
			"allow-snake-case",
			"allow-pascal-case"
		],
		"no-bitwise": false,
		"no-unused-variable": [
			true,
			{
				"ignore-pattern": "^_"
			}
		],
		"only-arrow-functions": [
			true,
			"allow-declarations"
		],
		"await-promise": [
			true,
			"Bluebird"
		],
		"no-floating-promises": [
			true,
			"Bluebird"
		],
		"no-shadowed-variable": [
			true,
			{
				"underscore": false
			}
		],
		"curly": true,
		"no-return-await": true,
		"radix": true,
		"switch-default": true,
		"use-isnan": true,
		"unified-signatures": false,
		"no-any": true,
		"max-line-length": false,
		"jsx-alignment": true,
		"jsx-curly-spacing": "never",
		"jsx-equals-spacing": "never",
		"jsx-key": true,
		"jsx-no-bind": true,
		"jsx-no-lambda": true,
		"jsx-no-multiline-js": false,
		"jsx-self-close": true,
		"jsx-space-before-trailing-slash": true,
		"jsx-wrap-multiline": false
	},
	"rulesDirectory": []
}